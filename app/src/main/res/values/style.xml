<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--    Primary button-->
    <style name="primary_button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/green_text</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_button</item>
    </style>

<!--  Keterangan Edit Text  -->
    <style name="keterangan_et">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/main_black</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>

<!--  Edit Text  -->
    <style name="edit_text">
        <item name="android:drawablePadding">32dp</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">14dp</item>
    </style>

<!--    Title screen -->
    <style name="title_screen">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/inter_semi_bold</item>
        <item name="android:textColor">@color/main_black</item>
    </style>

<!--    Desc Text-->
    <style name="desc_text">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/main_black</item>
    </style>

<!--    Main Activity - Main Menu-->
    <style name="main_menu_home">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/main_black</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!--    Main Activity - Main Menu - Desc-->
    <style name="main_menu_home_desc">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/main_black</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>
</resources>