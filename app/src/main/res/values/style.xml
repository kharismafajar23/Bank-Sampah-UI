    <style name="keterangan_et">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/main_black</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>

<!--  Edit Text  -->
    <style name="edit_text">
        <item name="android:drawablePadding">32dp</item>
        <item name="android:background">@drawable/bg_edit_text</item>
