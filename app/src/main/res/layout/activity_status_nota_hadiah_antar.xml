<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen"
    tools:context=".StatusNotaHadiahAntarActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="28dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btn_close"
            android:onClick="btn_close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_baseline_close_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/btn_close"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_check_circle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="11dp"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Penukaran Poin"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="@color/main_black"
                    android:layout_marginRight="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="BERHASIL"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="#559D55"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/bg_white"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/minyak2_img"
                    android:layout_width="73dp"
                    android:layout_height="97dp"
                    android:layout_marginBottom="13dp"/>

                <TextView
                    android:text="Penukaran Minyak"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="@color/main_black"
                    android:layout_marginBottom="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Goreng Bimoli 2L Dengan"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="@color/main_black"
                    android:layout_marginBottom="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="1850 Poin"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="@color/main_black"
                    android:layout_marginBottom="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginBottom="36dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Nama : Jessica"
                        android:textSize="12sp"
                        android:fontFamily="@font/inter_medium"
                        android:textColor="@color/main_black"
                        android:layout_marginBottom="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="Tanggal Penukaran : 11 November 2022"
                        android:textSize="12sp"
                        android:fontFamily="@font/inter_medium"
                        android:textColor="@color/main_black"
                        android:layout_marginBottom="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="Pengambilan : Ambil Sendiri"
                        android:textSize="12sp"
                        android:fontFamily="@font/inter_medium"
                        android:textColor="@color/main_black"
                        android:layout_marginBottom="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="Alamat : Jl. Pemuda Garuda No 1"
                        android:textSize="12sp"
                        android:fontFamily="@font/inter_medium"
                        android:textColor="@color/main_black"
                        android:layout_marginBottom="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                    android:text="Status: Sudah berhasil ditukar"
                    android:textSize="10sp"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="@color/main_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/snk_nota_hadiah_antar"
                android:textSize="10sp"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/green_text"
                android:lineHeight="17dp"/>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@drawable/bg_navbar"
        app:labelVisibilityMode="labeled"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>