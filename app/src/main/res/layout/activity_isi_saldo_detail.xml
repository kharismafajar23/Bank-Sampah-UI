<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IsiSaldoDetailActivity">

    <LinearLayout
        android:id="@+id/LL_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="28dp"
        android:paddingTop="28dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:src="@drawable/ic_back" />

        <TextView
            style="@style/title_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Isi Saldo SampahPay" />

    </LinearLayout>

    <!-- BRI -->
    <LinearLayout
        android:id="@+id/LL_isi_BRI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/bg_list"
        android:layout_marginTop="17dp"
        android:paddingLeft="24dp"
        android:paddingTop="10dp"
        android:paddingRight="24dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/LL_top">

        <ImageView
            android:src="@drawable/bri_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"/>

        <TextView
            android:text="BRI"
            android:textSize="14sp"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/main_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <!-- No VA -->
    <RelativeLayout
        android:id="@+id/LL_no_VA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/bg_list"
        android:layout_marginTop="9dp"
        android:paddingLeft="24dp"
        android:paddingTop="15dp"
        android:paddingRight="24dp"
        android:paddingBottom="15dp"
        app:layout_constraintTop_toBottomOf="@+id/LL_isi_BRI">

        <ImageView
            android:id="@+id/IV_copy"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_copy" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/IV_copy"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="No Virtual Akun"
                android:textColor="@color/main_black"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="1245 0813 6457 0231"
                android:textColor="#FFC047"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/outline_hijau"
            android:fontFamily="@font/inter_bold"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:paddingRight="10dp"
            android:paddingBottom="4dp"
            android:text="Salin"
            android:textColor="@color/main_black"
            android:textSize="12sp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <!-- Cara Pembayaran -->
    <LinearLayout
        android:id="@+id/LL_cara_pembayaran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/bg_list"
        android:orientation="vertical"
        android:layout_marginTop="9dp"
        android:paddingLeft="24dp"
        android:paddingTop="15dp"
        android:paddingRight="24dp"
        android:paddingBottom="15dp"
        app:layout_constraintTop_toBottomOf="@+id/LL_no_VA">

        <TextView
            android:text="Petunjuk Transfer ATM"
            android:textSize="14sp"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/main_black"
            android:layout_marginBottom="23dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp">

            <TextView
                android:text="1"
                android:textSize="11sp"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/main_black"
                android:background="@drawable/outline_hijau_rounded"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginRight="26dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Masukan kartu ATM dan PIN kamu"
                android:textSize="12sp"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/green_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <!-- 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp">

            <TextView
                android:text="2"
                android:textSize="11sp"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/main_black"
                android:background="@drawable/outline_hijau_rounded"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginRight="26dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Pilih Menu Traksaksi lain > Menu Pembayaran > Lainnya > Briva"
                android:textSize="12sp"
                android:lineHeight="18dp"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/green_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <!-- 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp">

            <TextView
                android:text="3"
                android:textSize="11sp"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/main_black"
                android:background="@drawable/outline_hijau_rounded"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginRight="26dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Masukan No Virtual Akun BRIVA ( 1245 + Nomor Handphone) > BENAR"
                android:textSize="12sp"
                android:lineHeight="18dp"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/green_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <!-- 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp">

            <TextView
                android:text="4"
                android:textSize="11sp"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/main_black"
                android:background="@drawable/outline_hijau_rounded"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginRight="26dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Isi nominal TOP UP Sampahpay"
                android:textSize="12sp"
                android:lineHeight="18dp"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/green_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <!-- 5 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp">

            <TextView
                android:text="5"
                android:textSize="11sp"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/main_black"
                android:background="@drawable/outline_hijau_rounded"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginRight="26dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Periksa nama akun Sampahocity anda jika sudah benar, pilih YA"
                android:textSize="12sp"
                android:lineHeight="18dp"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/green_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <!-- 6 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp">

            <TextView
                android:text="6"
                android:textSize="11sp"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/main_black"
                android:background="@drawable/outline_hijau_rounded"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginRight="26dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Lanjutkan transaksi sesuai intruksi"
                android:textSize="12sp"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/green_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <!-- 7 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp">

            <TextView
                android:text="7"
                android:textSize="11sp"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/main_black"
                android:background="@drawable/outline_hijau_rounded"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginRight="26dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Tunggu hingga muncul notifikasi top up Sampahpay berhasil"
                android:textSize="12sp"
                android:lineHeight="18dp"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/green_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <Button
            android:onClick="oke"
            android:text="OKE"
            style="@style/primary_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@drawable/bg_navbar"
        app:labelVisibilityMode="labeled"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>