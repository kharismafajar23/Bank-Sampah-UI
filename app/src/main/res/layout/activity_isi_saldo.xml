<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen"
    tools:context=".IsiSaldoActivity">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="28dp"
        android:paddingTop="28dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:src="@drawable/ic_back" />

        <TextView
            style="@style/title_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Isi Saldo SampahPay" />

    </LinearLayout>

    <!-- ATM -->
    <LinearLayout
        android:id="@+id/LL_isi_ATM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/bg_list"
        android:layout_marginTop="20dp"
        android:paddingLeft="24dp"
        android:paddingTop="16dp"
        android:paddingRight="24dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <ImageView
            android:src="@drawable/atm_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:text="ATM"
            android:textSize="14sp"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/main_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <!-- cari -->
    <LinearLayout
        android:id="@+id/LL_cari"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/bg_list"
        android:paddingLeft="24dp"
        android:paddingTop="20dp"
        android:paddingRight="24dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/LL_isi_ATM">

        <EditText
            android:hint="Cari Bank"
            android:textColorHint="@color/main_black"
            android:textSize="13sp"
            android:fontFamily="@font/inter_regular"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="20dp"
            android:paddingRight="16dp"
            android:drawableRight="@drawable/ic_search"
            android:background="@drawable/bg_search"
            android:layout_width="271dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <!-- BRI -->
    <LinearLayout
        android:onClick="keIsiSaldoDetail"
        android:id="@+id/LL_isi_BRI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/bg_list"
        android:paddingLeft="24dp"
        android:paddingTop="10dp"
        android:paddingRight="24dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/LL_cari">

        <ImageView
            android:src="@drawable/bri_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"/>

        <TextView
            android:text="BRI"
            android:textSize="14sp"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/main_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <!-- BNI -->
    <LinearLayout
        android:id="@+id/LL_isi_BNI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/bg_list"
        android:paddingLeft="24dp"
        android:paddingTop="10dp"
        android:paddingRight="24dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/LL_isi_BRI">

        <ImageView
            android:src="@drawable/bni_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"/>

        <TextView
            android:text="BNI"
            android:textSize="14sp"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/main_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <!-- BCA -->
    <LinearLayout
        android:id="@+id/LL_isi_BCA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/bg_list"
        android:paddingLeft="24dp"
        android:paddingTop="10dp"
        android:paddingRight="24dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/LL_isi_BNI">

        <ImageView
            android:src="@drawable/bca_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"/>

        <TextView
            android:text="BCA"
            android:textSize="14sp"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/main_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <!-- Mandiri -->
    <LinearLayout
        android:id="@+id/LL_isi_Mandiri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/bg_list"
        android:paddingLeft="24dp"
        android:paddingTop="10dp"
        android:paddingRight="24dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/LL_isi_BCA">

        <ImageView
            android:src="@drawable/mandiri_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"/>

        <TextView
            android:text="Mandiri"
            android:textSize="14sp"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/main_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <Button
        style="@style/primary_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="keIsiSaldoDetail"
        android:text="Konfirmasi"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LL_isi_Mandiri" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@drawable/bg_navbar"
        app:labelVisibilityMode="labeled"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>