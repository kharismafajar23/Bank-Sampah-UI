<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen"
    tools:context=".Detail_Paket_Activity">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="177dp"
        android:background="@drawable/bg_harga_paket"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/CL_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="28dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/IV_foto_profil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/foto_profil_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_crown"
            app:layout_constraintBottom_toBottomOf="@+id/IV_foto_profil"
            app:layout_constraintEnd_toEndOf="@+id/IV_foto_profil" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:fontFamily="@font/inter_bold"
            android:text="Hi,"
            android:textColor="@color/putih"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/IV_foto_profil"
            app:layout_constraintTop_toTopOf="@+id/IV_foto_profil" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Jessica Hanson"
            android:textColor="@color/putih"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jess_123"
            android:textColor="@color/putih"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_notification_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:id="@+id/LL_detail_poin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white"
            android:orientation="horizontal"
            android:padding="14dp"
            android:weightSum="3"
            android:layout_marginTop="35dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/IV_foto_profil">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="Poin"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="@color/main_black"
                    android:text="0"
                    android:textSize="16sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:src="@drawable/ic_top_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semi_bold"
                    android:textColor="@color/green_text"
                    android:text="Top Up"
                    android:textSize="13sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="Saldo"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="@color/main_black"
                    android:text="Rp 0"
                    android:textSize="16sp" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bg_white"
            android:layout_marginTop="40dp"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/LL_detail_poin">

            <LinearLayout
                android:layout_marginBottom="28dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Paket Premium A"
                    android:textSize="16sp"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="@color/main_black"
                    android:layout_marginRight="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:src="@drawable/ic_trash_premium"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_edit_note"
                    android:layout_marginRight="18dp"
                    android:layout_width="34dp"
                    android:layout_height="34dp"/>

                <TextView
                    android:text="ORD01243"
                    android:textSize="15sp"
                    android:textColor="@color/main_black"
                    android:fontFamily="@font/inter_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_jadwal"
                    android:layout_marginRight="18dp"
                    android:layout_width="34dp"
                    android:layout_height="34dp"/>

                <TextView
                    android:text="3x Per Minggu"
                    android:textSize="15sp"
                    android:textColor="@color/main_black"
                    android:fontFamily="@font/inter_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_kalender"
                    android:layout_marginRight="18dp"
                    android:layout_width="34dp"
                    android:layout_height="34dp"/>

                <TextView
                    android:text="4 Nov 2022"
                    android:textSize="15sp"
                    android:textColor="@color/main_black"
                    android:fontFamily="@font/inter_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_durasi"
                    android:layout_marginRight="18dp"
                    android:layout_width="36dp"
                    android:layout_height="34dp"/>

                <TextView
                    android:text="1 bulan"
                    android:textSize="15sp"
                    android:textColor="@color/main_black"
                    android:fontFamily="@font/inter_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:background="@drawable/outline_hijau"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">


        <TextView
            android:id="@+id/TV_saldo"
            android:text="SampahPay (Rp. 50.000)"
            android:textSize="12sp"
            android:fontFamily="@font/inter_semi_bold"
            android:textColor="@color/main_black"
            android:layout_marginBottom="16dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/TV_total_harga_txt"
            android:text="Total Harga"
            android:textSize="12sp"
            android:fontFamily="@font/inter_semi_bold"
            android:textColor="@color/main_black"
            android:layout_below="@+id/TV_saldo"
            android:layout_marginBottom="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/TV_total_harga"
            android:text="Rp 15.000"
            android:textSize="12sp"
            android:fontFamily="@font/inter_semi_bold"
            android:textColor="@color/main_black"
            android:layout_below="@+id/TV_saldo"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_bayar"
            android:onClick="btn_bayar"
            style="@style/primary_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TV_total_harga_txt"
            android:layout_marginBottom="14dp"
            android:text="Bayar" />

        <Button
            android:id="@+id/btn_batal"
            android:onClick="btn_batal"
            style="@style/batal_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_bayar"
            android:layout_marginBottom="14dp"
            android:text="Batal" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>