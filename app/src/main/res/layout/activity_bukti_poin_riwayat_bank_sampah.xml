<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="28dp"
    android:orientation="vertical"
    android:background="@color/bg_screen"
    tools:context=".BuktiPoinRiwayatBankSampahActivity">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="83dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ic_check_circle"
            android:layout_marginBottom="19dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Sampah telah diambil"
            android:textSize="20sp"
            android:textColor="@color/main_black"
            android:fontFamily="@font/inter_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <!--  Nomor Order  -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp">

        <TextView
            android:text="Nomor Order"
            android:textSize="14sp"
            android:textColor="@color/main_black"
            android:fontFamily="@font/inter_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="ORD - 012300"
            android:textSize="14sp"
            android:textColor="@color/main_black"
            android:fontFamily="@font/inter_medium"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <!--  Tanggal  -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="Tanggal"
            android:textColor="@color/main_black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/inter_medium"
            android:text="9 Desember 2022"
            android:textColor="@color/main_black"
            android:textSize="14sp" />
    </RelativeLayout>

    <!--  Kategori Sampah  -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp">

        <TextView
            android:text="Kategori Sampah"
            android:textSize="14sp"
            android:textColor="@color/main_black"
            android:fontFamily="@font/inter_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Non Organik"
            android:textSize="14sp"
            android:textColor="@color/main_black"
            android:fontFamily="@font/inter_medium"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <!--  Alamat  -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp">

        <TextView
            android:text="Alamat"
            android:textSize="14sp"
            android:textColor="@color/main_black"
            android:fontFamily="@font/inter_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/inter_medium"
            android:text="Jalan Pemuda No.2 Banguntapan"
            android:textAlignment="textEnd"
            android:textColor="@color/main_black"
            android:textSize="14sp" />
    </RelativeLayout>

    <!--  Berat  -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp">

        <TextView
            android:text="Berat"
            android:textSize="14sp"
            android:textColor="@color/main_black"
            android:fontFamily="@font/inter_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="3 kg"
            android:textSize="14sp"
            android:textColor="@color/main_black"
            android:fontFamily="@font/inter_medium"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <!--  Poin Didapat  -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp">

        <TextView
            android:text="Poin Didapat"
            android:textSize="14sp"
            android:textColor="@color/main_black"
            android:fontFamily="@font/inter_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="70"
            android:textSize="14sp"
            android:textColor="@color/main_black"
            android:fontFamily="@font/inter_medium"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <!--  button download and share  -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="Download"
            android:drawableLeft="@drawable/ic_download_white"
            android:drawablePadding="18dp"
            style="@style/download_button"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:text="Share"
            android:drawableLeft="@drawable/ic_share"
            android:drawablePadding="18dp"
            style="@style/download_button"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <Button
        android:text="Kembali"
        style="@style/primary_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="kembali_home"/>

</LinearLayout>